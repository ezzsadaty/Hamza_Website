---
import { latestPosts } from "../data/posts";
---
<section class="section latest-posts">
  <div class="container">
    <h2>أحدث المقالات / المنشورات</h2>
    <div class="posts-grid">
      {latestPosts.map((p) => (
        <a class="post-card" href={p.href}>
          <!-- Thumbnail -->
          <img
            src={
              p.kind === "video"
                ? p.href
                : p.kind === "pdf"
                ? p.href
                : p.kind === "article"
                ? p.href
                : p.kind === "image"
                ? p.href
                : "/icons/article-thumb.png"
            }
            alt={p.title}
            class="post-thumb"
          />

          <!-- Content -->
          <div class="post-content">
            <span class="post-tag">
              {p.kind === "article"
                ? "مقال"
                : p.kind === "video"
                ? "فيديو"
                : p.kind === "pdf"
                ? "ملف PDF"
                : "صورة"}
            </span>
            <div class="post-title">{p.title}</div>
            {p.date && <div class="post-meta">{p.date}</div>}
          </div>
        </a>
      ))}
    </div>

    <div style="text-align:center; margin-top:2rem">
      <a class="btn btn-brand" href="/blog">عرض جميع المقالات</a>
    </div>
  </div>
</section>
